<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="resource_calendar_leave_view_form_inhe" model="ir.ui.view">
        <field name="name">resource.calendar.leaves.form.inherit.vacance.resource</field>
        <field name="model">resource.calendar.leaves</field>
        <field name="inherit_id" ref="resource.resource_calendar_leave_form"/>
        <field name="arch" type="xml">
            <field name="resource_id" position="after">
                <field name="party_id"/>
            </field>
            <field name="date_from" position="replace">
                <field name="date_star"/>
            </field>
            <field name="date_to" position="replace">
                <field name="date_end"/>
            </field>
            <field name="work_entry_type_id" position="replace">
                <field name="number_of_days_party"/>
            </field>
        </field>
    </record>
    <record id="resource_calendar_leave_view_tree_ine" model="ir.ui.view">
        <field name="name">resource.calendar.leaves.tree.inherit.vacance.resource</field>
        <field name="model">resource.calendar.leaves</field>
        <field name="inherit_id" ref="resource.resource_calendar_leave_tree"/>
        <field name="arch" type="xml">
            <field name="resource_id" position="after">
                <field name="party_id"/>
            </field>
            <field name="date_from" position="before">
                <field name="date_star"/>
            </field>
            <field name="date_from" position="before">
                <field name="date_end"/>
            </field>
            <field name="date_from" position="before">
                <field name="number_of_days_party"/>
            </field>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='calendar_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='work_entry_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!--<xpath expr="//field[@name='date_from']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_to']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>-->
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_leave_dashboard_kanban" model="ir.ui.view">
        <field name="name">hr.employee.leave.dashboard.kanban</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="allocated_days"/>
                <field name="used_days"/>
                <field name="remaining_days"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong><field name="name"/></strong>
                            </div>
                            <div>Alloué : <field name="allocated_days"/></div>
                            <div>Pris : <field name="used_days"/></div>
                            <div>Restant : <field name="remaining_days"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


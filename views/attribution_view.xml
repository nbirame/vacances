<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="hr_leave_allocation_view_form_attribution" model="ir.ui.view">
            <field name="name">hr.leave.allocation.view.form</field>
            <field name="model">hr.leave.allocation</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form"/>
            <field name="mode">primary</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">

                <xpath expr="//header" position="replace">
                    <header>
                        <button string="Valider" name="action_validate" states="confirm" type="object" class="oe_highlight"/>
                        <button string="Refuser" name="action_refuse" type="object"
                            attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                        <button string="Remettre en brouillon" name="action_draft" states="confirm" type="object" class="oe_highlight"/>
                        <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
                    </header>
                </xpath>
            </field>
        </record>
</odoo>
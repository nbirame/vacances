<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="vacances_recaputilation_action" model="ir.actions.act_window">
        <field name="name">Tableau de bord des congé</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vacances.recaputilation</field>
        <field name="domain">[('user_id','=',uid)]</field>
        <field name="view_mode">tree,form,activity</field>
    </record>
    <record id="vacances_recaputilation_tree" model="ir.ui.view">
        <field name="name">vacances.recaputilation.tree</field>
        <field name="model">vacances.recaputilation</field>
        <field name="arch" type="xml">
            <tree string="Nombre de jour de congé">
                <field name="allocated_days"/>
                <field name="used_days"/>
                <field name="remaining_days"/>
            </tree>
        </field>
    </record>
    <record id="vacances_recaputilation_search" model="ir.ui.view">
        <field name="model">vacances.recaputilation</field>
        <field name="arch" type="xml">
            <search>
                <field name="allocated_days"/>
                <field name="used_days"/>
                <field name="remaining_days"/>
            </search>
        </field>
    </record>
    <record id="vacances_recaputilation_form" model="ir.ui.view">
        <field name="name">vacances.recaputilation.form</field>
        <field name="model">vacances.recaputilation</field>
        <field name="arch" type="xml">
            <form string="Détail congé">
                <sheet>
                    <div class="oe_title">
                        <group name="group_top" col="4">
                            <field name="allocated_days"/>
                            <field name="used_days"/>
                            <field name="remaining_days"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem
            id="menu_recaputilation_cong"
            action="vacances_recaputilation_action"
            name="Dashbord Congé"
            parent="hr_holidays.menu_hr_holidays_configuration"
            sequence="5"/>

</odoo>

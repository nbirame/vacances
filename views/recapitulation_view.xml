<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Vue Graph (Pie) -->
    <record id="view_hr_leave_report_graph" model="ir.ui.view">
        <field name="name">vacances.recapitulation.graph</field>
        <field name="model">vacances.recapitulation</field>
        <field name="arch" type="xml">
            <graph string="Camembert Congés" type="pie">
                <!-- On utilise 'value' comme mesure, 'name' comme étiquette -->
                <field name="used_days" type="measure"/>
                <field name="remaining_days" type="row"/>
            </graph>
        </field>
    </record>

    <!-- Action pour ouvrir la vue Graph -->
    <record id="action_hr_leave_report_graph" model="ir.actions.act_window">
        <field name="name">Camembert Congés</field>
        <field name="res_model">vacances.recapitulation</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_hr_leave_report_graph"/>
    </record>

    <!-- Menu pour accéder à ce rapport, sous le menu "Time Off" d’Odoo (hr_holidays.menu_time_off_root) -->
    <menuitem id="menu_hr_leave_report"
              name="Camembert Congés"
              parent="hr_holidays.menu_hr_holidays_configuration"
              action="action_hr_leave_report_graph"/>
</odoo>
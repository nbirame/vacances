<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action pour ouvrir le tableau de bord -->
    <record id="action_employee_vacation_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de bord des congés</field>
        <field name="res_model">employee.vacation.dashboard</field>
        <field name="view_mode">tree,graph</field>
        <field name="help">Vue globale des congés par employé</field>
    </record>

    <!-- Menu : on l’attache à la racine des congés -->
    <menuitem
        id="menu_employee_vacation_dashboard"
        name="Tableau de bord congés"
        parent="hr_holidays.menu_hr_holidays_root"
        action="action_employee_vacation_dashboard"
        sequence="20"
    />

    <!-- Vue liste (tree view) -->
    <record id="view_employee_vacation_tree" model="ir.ui.view">
        <field name="name">employee.vacation.dashboard.tree</field>
        <field name="model">employee.vacation.dashboard</field>
        <field name="arch" type="xml">
            <tree string="Tableau de bord congés">
                <field name="employee_id"/>
                <field name="total_allocated_days"/>
                <field name="used_days"/>
                <field name="remaining_days"/>
            </tree>
        </field>
    </record>

    <!-- Vue graphique (diagramme) -->
    <record id="view_employee_vacation_graph" model="ir.ui.view">
        <field name="name">employee.vacation.dashboard.graph</field>
        <field name="model">employee.vacation.dashboard</field>
        <field name="arch" type="xml">
            <graph string="Statistiques de congés" type="bar">
                <field name="employee_id" type="row"/>
                <field name="total_allocated_days" type="measure"/>
                <field name="used_days" type="measure"/>
                <field name="remaining_days" type="measure"/>
            </graph>
        </field>
    </record>

</odoo>
